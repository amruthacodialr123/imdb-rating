{% extends 'base.html.twig' %}

{% block title %}Director{% endblock %}

{% block body %}
   <div class="container">
        <h2 class="text-center mt-5 mb-3">Show Director</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-info float-right" href="{{ path('app_director_index') }}"> 
                    View All Directors
                </a>
            </div>
            <div class="card-body">
    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ director.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ director.name }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ director.gender }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ director.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('assets/images/' ~ director.image) }}" alt="{{ director.name }}" width="100"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_director_index') }}">back to list</a>

    <a href="{{ path('app_director_edit', {'id': director.id}) }}">edit</a>

    {{ include('director/_delete_form.html.twig') }}
{% endblock %}
