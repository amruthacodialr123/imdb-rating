{% extends 'base.html.twig' %}

{% block title %}Movies index{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Movie Details Listing</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-primary" href="{{ path('app_movies_new') }}"> 
                    Create New Movie 
                </a>
            </div>
            <div class="card-body">
   <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Release_date</th>
                <th>Image</th>
                <th>Category</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.title }}</td>
                <td>{{ movie.releaseDate }}</td><td>
 {% if movie.image %}
                        <img src="{{ asset('assets/images/' ~ movie.image) }}" alt="{{ movie.title }}" width="100">
                    {% else %}
                        No Image
                    {% endif %}       </td>        
                <td>{{ movie.category }}</td>
                <td>{{ movie.description }}</td>
                <td>
                    <a class="btn btn-outline-info" href="{{ path('app_movies_show', {'id': movie.id}) }}">show</a>
                    <a class="btn btn-outline-success" href="{{ path('app_movies_edit', {'id': movie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
        </div>
    </div>

{% endblock %}
