{% extends 'base.html.twig' %}

{% block title %}Movies{% endblock %}

{% block body %}
    <h1>Movies</h1><center>
<img src="{{ asset('assets/images/' ~ movie.image) }}" alt="{{ movie.title }}" width="100%" height="100%"></center>
  <div class="container">
        <h2 class="text-center mt-5 mb-3">Show Movies</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-info float-right" href="{{ path('app_movies_index') }}"> 
                    View All Movies
                </a>
            </div>
            <div class="card-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>Release_date</th>
                <td>{{ movie.releaseDate }}</td>
            </tr>
        
            <tr>
                <th>Category</th>
                <td>{{ movie.category }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ movie.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_movies_index') }}">back to list</a>

    <a href="{{ path('app_movies_edit', {'id': movie.id}) }}">edit</a>

    {{ include('movies/_delete_form.html.twig') }}
{% endblock %}
